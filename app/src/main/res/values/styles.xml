<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name ="AppTheme" parent="Theme.AppCompat">
        <!--        customizing theme from here       -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
    </style>
    <style name ="LoginPage"  parent="Theme.AppCompat.NoActionBar">
        <!--        customizing theme from here       -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
    </style>
    <style name="LoginPage.BackgroundImage">
        <item name="android:windowBackground">@drawable/login_background_main</item>
    </style>

<!-- this is so that the background stays as the device screen background instead of the layout background ( so no resize takes place )   -->

</resources>